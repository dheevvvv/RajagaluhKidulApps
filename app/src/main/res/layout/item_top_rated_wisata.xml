<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="200dp"
    app:strokeColor="@color/earth_02"
    android:id="@+id/onClickDetail"
    android:layout_marginEnd="@dimen/margin_10"
    android:layout_marginBottom="@dimen/margin_20"
    app:cardCornerRadius="@dimen/margin_20"
    android:layout_height="210dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_popular_wisata"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/testtstoreposter"/>
        <TextView
            android:id="@+id/tv_title_item_top_rated_wisata"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_height="wrap_content"
            android:text="Aryakibans Land"
            android:fontFamily="@font/poppins_medium"
            />
        <TextView
            android:id="@+id/tv_kategori_item_popular_umkm"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_height="wrap_content"
            android:text="Adventure"
            android:fontFamily="@font/poppins_light"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/rate"
                android:text="8.3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginStart="15dp"
                android:id="@+id/jarak"
                android:textColor="@color/earth_02"
                android:text="1.0 km from balai desa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>